<h1>Lista de comentarios creados</h1>

<table>
  <thead>
    <tr>
      <th>Contenido</th>
      <th>Fecha de creación</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.content %></td>
        <td><%= comment.comment_date.strftime("%d/%m/%y: %H:%M:%S") %></td>
        <td><%= link_to 'Mostrar', publication_comment_path(@publication, comment) %></td>
        <td><%= link_to 'Editar', edit_publication_comment_path(@publication, comment) %></td>
        <td><%= link_to 'Eliminar', publication_comment_path(@publication, comment), method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear nuevo', new_publication_comment_path %>
