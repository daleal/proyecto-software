<h1>Editar Comentario</h1>

<%= form_for [@publication, @comment] do |f| %>

  <div class="field">
    <%= f.text_area :content, placeholder: 'Contenido' %>
  </div>

  <div class="actions">
    <%= f.submit "Editar Comentario" %>
  </div>

<% end %>

<%= link_to 'Mostrar', publication_comment_path(@publication, @comment) %> |
<%= link_to 'Volver', publication_comments_path %>
