<div class="inner">

  <h1>Crear Comentario</h1>

  <%= form_for [@publication, @comment] do |f| %>

    <div class="row gtr-uniform">

      <div class="col-12">
        <%= f.text_area :content, placeholder: 'Contenido' %>
      </div>

      <div class="col-12">
        <ul class="actions">
          <li><%= f.submit "Crear Comentario" %></li>
        </ul>
      </div>

    </div>

  <% end %>

  <div class="col-12">
    <ul class="actions">
      <li><%= link_to 'Volver', publication_comments_path, class: "button primary" %></li>
    </ul>
  </div>

</div>
