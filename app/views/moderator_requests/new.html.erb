<div class="inner">

  <header class="major">
    <h1>Crear Solicitud</h1>
  </header>

  <%= form_for [@course, @moderator_request] do |f| %>

    <div class="row gtr-uniform">

      <div class="col-12">
        <%= f.text_area :content, placeholder: 'Contenido' %>
      </div>

      <div class="col-12">
        <ul class="actions">
          <li><%= f.submit "Crear Solicitud" %></li>
        </ul>
      </div>

    </div>

  <% end %>

  <ul class="actions">
    <li><%= link_to 'Volver', @course, class: "button primary" %></li>
  </ul>

</div>
