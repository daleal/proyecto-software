<div class="inner">

  <header class="major">
    <h1>Conversaci√≥n</h1>
  </header>

  <div class="table-wrapper">
    <table class="alt">
      <thead>
        <tr>
          <th>Emisor</th>
          <th>Fecha</th>
          <th>Asunto</th>
          <th>Contenido</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @messages.each do |message| %>
          <tr>
            <td><%= User.find(message.user_id).email %></td>
            <td><%= message.message_time %></td>
            <td><%= message.subject %></td>
            <td><%= message.body %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>


  <div class="col-12">
    <ul class="actions stacked">
      <li><%= link_to 'Enviar Nuevo Mensaje', new_conversation_message_path(@conversation), class: "button primary" %></li>
      <li><%= link_to 'Volver a la bandeja de entrada', conversations_url, class: "button" %></li></li>
    </ul>
  </div>

</div>
