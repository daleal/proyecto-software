<div class="inner">

  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row gtr-uniform">
      <div class="col-12">
        <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="col-12">
        <%= f.password_field :password, placeholder: "Contraseña", autocomplete: "password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="col-12">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="col-12">
        <ul class="actions">
          <li><%= f.submit "Iniciar sesión" %></li>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="col-12">
    <ul class="actions">
      <%= render "devise/shared/links" %>
    </ul>
  </div>

</div>
