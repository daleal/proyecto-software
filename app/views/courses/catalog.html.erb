<div class="inner">

  <header class="major">
    <h1>Lista de todos los ramos</h1>
  </header>

  <form>
    <div class="row gtr-uniform">
      <div class="col-6 col-12-xsmall">
        <input type="text" placeholder="Filtro" name=q value=<%= @q %> <%= @q %> >
      </div>
      <div class="col-6 col-12-xsmall">
        <button type=”submit”>Filtrar</button>
      </div>
    </div>
  </form>
  <form>
    <div class="row gtr-uniform">
      <div class="col-12">
        <button type=”submit”>Quitar Filtro</button>
      </div>
    </div>
  </form>


  <div class="table-wrapper">

    <table class="alt">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Iniciales</th>
          <th>Nombre del Profesor</th>
          <th>Sala</th>
          <% if current_user.administrator? %>
            <th colspan="3"></th>
          <% else %>
            <th colspan="1"></th>
          <% end %>

        </tr>
      </thead>

      <tbody>
        <% @courses.each do |course| %>
          <tr>
            <td><%= course.name %></td>
            <td><%= course.initials %></td>
            <td><%= course.teacher_name %></td>
            <td><%= Room.find(course.room_id).number %></td>
            <td><%= link_to 'Mostrar', course %></td>
            <% if current_user.administrator? %>
              <td><%= link_to 'Editar', edit_course_path(course) %></td>
            <% end %>
            <% if current_user.administrator? %>
              <td><%= link_to 'Eliminar', course, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
            <% end %>

          </tr>
        <% end %>
      </tbody>
    </table>

  </div>

</div>
