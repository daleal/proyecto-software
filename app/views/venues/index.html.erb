<div class="inner">

  <header class="major">
    <h1>Lista de campus creados</h1>
  </header>

  <div class="table-wrapper">

    <table class="alt">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Dirección</th>
          <th>Descripción</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @venues.each do |venue| %>
          <tr>
            <td><%= venue.name %></td>
            <td><%= venue.address %></td>
            <td><%= venue.description %></td>
            <td><%= link_to 'Mostrar', venue %></td>
            <td><%= if current_user.administrator?
                      link_to 'Editar', edit_venue_path(venue)
                    end %></td>
            <td><%= if current_user.administrator?
                      link_to 'Eliminar', venue, method: :delete, data: { confirm: '¿Estás seguro?' }
                    end %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>

  <br>

  <%=
    if current_user.administrator?
      link_to 'Crear nuevo', new_venue_path
    end
  %>

</div>
