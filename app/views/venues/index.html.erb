<div class="inner">

  <header class="major">
    <h1>Lista de todos los campus</h1>
  </header>

  <div class="table-wrapper">

    <table class="alt">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Dirección</th>
          <th>Descripción</th>
          <% if current_user.administrator? %>
            <th colspan="3"></th>
          <% else %>
            <th colspan="1"></th>
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% @venues.each do |venue| %>
          <tr>
            <td><%= venue.name %></td>
            <td><%= venue.address %></td>
            <td><%= venue.description %></td>
            <td><%= link_to 'Mostrar', venue %></td>
            <% if current_user.administrator? %>
              <td><%= link_to 'Editar', edit_venue_path(venue) %></td>
            <% end %>
            <% if current_user.administrator? %>
              <td><%= link_to 'Eliminar', venue, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>

  <br>

  <%=
    if current_user.administrator?
      link_to 'Crear nuevo', new_venue_path
    end
  %>

</div>
