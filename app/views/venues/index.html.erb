<p id="notice"><%= notice %></p>

<h1>Lista de campus creados</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Dirección</th>
      <th>Descripción</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @venues.each do |venue| %>
      <tr>
        <td><%= venue.name %></td>
        <td><%= venue.address %></td>
        <td><%= venue.description %></td>
        <td><%= link_to 'Mostrar', venue %></td>
        <td><%= link_to 'Editar', edit_venue_path(venue) %></td>
        <td><%= link_to 'Eliminar', venue, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

