<%= favicon_link_tag asset_path("favicon/favicon.ico"), rel: "shortcut icon" %>
<%= favicon_link_tag asset_path("favicon/favicon.ico"), rel: "icon", sizes: "16x16 32x32 64x64" %>
<% [192,160,96,64,32,16].each do |size| %>
  <%= favicon_link_tag asset_path("favicon/favicon-#{size}.png"), rel: "icon", type: "image/png", sizes: "#{size}x#{size}" %>
<% end %>
<%= favicon_link_tag asset_path("favicon/favicon-57.png"), rel: "apple-touch-icon" %>
<% [114,72,144,60,120,76,152,180].each do |size| %>
  <%= favicon_link_tag asset_path("favicon/favicon-#{size}.png"), rel: "apple-touch-icon", sizes: "#{size}x#{size}" %>
<% end %>
<meta name="msapplication-TileColor" content="#FFFFFF">
<meta name="msapplication-TileImage" content="<%= asset_path("favicon/favicon-144.png")%>">
<meta name="msapplication-config" content="<%= asset_path("favicon/browserconfig.xml")%>">
