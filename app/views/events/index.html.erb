<h1>Lista de eventos creados</h1>

<table>
  <thead>
    <tr>
      <th>Categoría</th>
      <th>Descripción</th>
      <th>Ramo</th>
      <th>Sala</th>
      <th>Creado por</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.category %></td>
        <td><%= event.description %></td>
        <td><%= Course.find(event.course_id).name %></td>
        <td><%= Room.find(event.room_id).number %></td>
        <td><%= event.created_by %></td>
        <td><%= link_to 'Mostrar', event %></td>
        <td><%= if (event.created_by == current_user.email) || current_user.administrator?
                  link_to 'Editar', edit_event_path(event)
                end %></td>
        <td><%= if (event.created_by == current_user.email) || current_user.administrator?
                  link_to 'Eliminar', event, method: :delete, data: { confirm: '¿Estás seguro?' }
                end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear nuevo', new_event_path %>
